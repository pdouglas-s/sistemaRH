@model IEnumerable<sistemaRH.Models.Trabalho>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescTrabalho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescTrabalho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTrabalho">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTrabalho">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTrabalho">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
